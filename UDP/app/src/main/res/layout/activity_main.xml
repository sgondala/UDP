<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\t\t\t\t  Welcome!! \nSelect one of server or client \n\n"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:id="@+id/partnerIP"
        android:layout_width="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:hint="@string/partnerIPString"/>

    <EditText
        android:id="@+id/messageBox"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="@string/messageString"/>

    <Button
        android:id="@+id/clientButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clientButtonString"
        android:layout_gravity="center_horizontal"
        android:onClick="clickedConnect"/>

    <!--
    <Button
        android:id="@+id/serverButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/serverButtonString"
        android:layout_gravity="center_horizontal" />
        -->

    <Button
        android:id="@+id/sendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sendString"
        android:layout_gravity="center_horizontal"
        android:onClick="clickedSend" />




</LinearLayout>
